        .tech-card:hover {
            transform: translateY(-8px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }
        
        .bg-gradient-mesh {
            background: 
                radial-gradient(ellipse at 20% 0%, rgba(120, 119, 198, 0.3), transparent 50%),
                radial-gradient(ellipse at 80% 100%, rgba(255, 119, 198, 0.2), transparent 50%),
                radial-gradient(ellipse at 0% 100%, rgba(120, 219, 255, 0.2), transparent 50%),
                linear-gradient(135deg, #0f1419 0%, #1a202c 50%, #2d3748 100%);
        }
        
        .icon-tech {
            transition: all 0.3s ease;
        }
        
        .tech-card:hover .icon-tech {
            transform: scale(1.1);
        }
        
        .skill-bar {
            display: flex;
            gap: 2px;
            justify-content: center;
            margin-top: 8px;
        }
        
        .skill-dot {
            width: 8px;
            height: 3px;
            border-radius: 2px;
            background: rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }
        
        .skill-dot.active {
            background: linear-gradient(90deg, #3b82f6, #8b5cf6);
            box-shadow: 0 0 6px rgba(59, 130, 246, 0.4);
        }
    </style>
</head>
